class Solution {
    public int longestValidParentheses(String s) {
        Stack<Integer>st=new Stack<>();
        st.push(-1);
        int count=0;
        int n=s.length();
        for(int i=0;i<n;i++){
            char ch=s.charAt(i);
            if(ch=='('){
                st.push(i);
            }
          else{
                if(!st.isEmpty()){
                    st.pop();
                } 
                if (!st.isEmpty()) {
                  count = Math.max(count, i - st.peek()); // Calculate valid length
                } else {
                    st.push(i); // Push ')' index if stack is empty
                }  
            }
        }
        return count;
    }
}
