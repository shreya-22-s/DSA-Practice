/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
class Solution {
    public ListNode reverseKGroup(ListNode head, int k) {
        if (head == null || k == 1) return head; // Base case

        // Step 1: Check if there are at least k nodes
        ListNode temp = head;
        int count = 0;
        while (temp != null && count < k) {
            temp = temp.next;
            count++;
        }

        if (count < k) return head; // Not enough nodes to reverse, return as is.

        // Step 2: Reverse the first k nodes
        ListNode prev = null;
        ListNode curr = head;
        ListNode next = null;
        for (int i = 0; i < k; i++) {
            next = curr.next;
            curr.next = prev;
            prev = curr;
            curr = next;
        }

        // Step 3: Recursively process the remaining nodes
        head.next = reverseKGroup(curr, k);

        return prev; // `prev` is the new head of the reversed segment
    }
}
